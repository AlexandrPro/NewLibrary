<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Custom styles for this template -->
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <@*link href="~/Content/ie10-viewport-bug-workaround.css" rel="stylesheet">*@

    <!-- Custom styles for this template -->
    
    
    @Styles.Render("~/Styles/bootstrap3.css")
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content.css")
    <link href="~/Content//dashboard.css" rel="stylesheet">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap3.js")
    @Scripts.Render("~/bundles/kendo")
  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="~/Publication/Index">Library</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            @*<li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/#">Dashboard</a></li>
            <li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/#">Settings</a></li>
            <li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/#">Profile</a></li>*@
            <li><a class="yellow-link" href="~/Book/Admin">Welcome, @Context.User.Identity.Name</a></li>
            <li><a href="~/ApplicationUser/LogOut">LogOut</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <input type="text" class="form-control" placeholder="Search...">
          </form>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li><a href="~/Book/Admin">Books</a></li>
              <li><a href="~/Brochure/Admin">Brochures</a></li>
            <li><a href="~/Magazine/Admin">Magazines</a></li>
            <li><a href="~/PublishingHouse/Admin">Publishing Houses</a></li>
          </ul>
          @*<ul class="nav nav-sidebar">
            <li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/">Nav item again</a></li>
            <li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/">One more nav</a></li>
            <li><a href="https://getbootstrap.com/docs/3.3/examples/dashboard/">Another nav item</a></li>
          </ul>*@
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="~/Scripts/holder.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
  
     <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>